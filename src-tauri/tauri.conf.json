{
  "$schema": "https://schema.tauri.app/tauri.conf.json",
  "productName": "tauri-map",
  "version": "0.1.0",
  "identifier": "com.tauri-map.app",
  "mainBinaryName": "tauri-map",

  "build": {
    "devUrl": "http://127.0.0.1:8080/",
    "frontendDist": "../src"
  },

  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "tauri-map",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "dragDropEnabled": false,
        "devtools": true
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../tr12.mbtiles",
      "../src/styles",
      "../src/fonts"
    ]
  },

  "plugins": {}
}
